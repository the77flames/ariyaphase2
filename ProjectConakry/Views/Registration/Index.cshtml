
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPreLogIn.cshtml";
}

<script type="text/javascript">

    $(document).ready(function () {

        $('#dob').datepicker();

    });

</script>
    <!--header-wrapEND-->
    <div class="clr"></div>



    <!--content-->
    <section id="content">

        <!--content-inner-->
        <div id="content-inner">

            <form action="Registration\Register" method="POST">
                <section id="signup-form">
                    <h1>SIGNUP</h1>
                            <div class="signup-form-content">
                            <div class="form-field"><input type="text" placeholder="First Name" name="firstname" /></div>
                            <div class="form-field"><input type="text" placeholder="Last Name" name="lastname" /></div>
                            <div class="form-field"><input type="email" placeholder="Email" name="email" /></div>
                            <div class="form-field"><input type="password" placeholder="Password" name="password" /></div>
                            <div class="form-field">
                                <label>Gender</label>
                                <span class="select-container">
                                    <select name="gender">
                                        <option>Male</option>
                                        <option>Female</option>
                                    </select>
                                </span>
                            </div>
                            <div class="form-field">
                                <label>Birthday</label>
                                <input id="dob" type="text" placeholder="mm/dd/yy" name="dob" style="width: 110px !important" />
                            </div>
                            <div class="form-field">
                                <label>Account</label>
                                <span class="select-container">
                                    <select name="accounttype">
                                        <option>USER</option>
                                        <option>ACT</option>
                                    </select>
                                </span><span class="what-is"><a href="#">What's this?</a></span>
                            </div>
                            <div class="form-field">
                                <label>&nbsp;</label>
                                <input type="checkbox" name="agree" value="1" /><span>I agree with ariya’s Terms and Conditions</span>
                            </div>
                            <div class="form-field"><label>&nbsp;</label> <input type="submit" value="Sign Up" name="submit" /></div>

                            <div class="form-field">
                                <label>&nbsp;</label>
                                <span>Already have an account? <a href="login.html">Log In</a></span>
                            </div>
                            <div class="clr"></div>
                        </div>          
                </section>
            </form>
            <!--rightsidebarEND-->
        </div>
        <!--content-innerEND-->
        <div class="clr"></div>
    </section>
    <!--contentEND-->
    <div class="clr"></div>
   
