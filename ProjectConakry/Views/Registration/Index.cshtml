@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <!--header-wrapEND-->
    <div class="clr"></div>



    <!--content-->
    <section id="content">

        <!--content-inner-->
        <div id="content-inner">


            <!--news-->
            <section id="signup-form">
                <h1>SIGNUP</h1>
                <div class="signup-form-content">
                    <div class="form-field"><input type="text" placeholder="First Name" name="fname" /></div>
                    <div class="form-field"><input type="text" placeholder="Last Name" name="lname" /></div>
                    <div class="form-field"><input type="email" placeholder="Email" name="email" /></div>
                    <div class="form-field"><input type="password" placeholder="Password" name="password" /></div>
                    <div class="form-field">
                        <label>Gender</label>
                        <span class="select-container">
                            <select name="gender">
                                <option>Male</option>
                                <option>Female</option>
                            </select>
                        </span>
                    </div>
                    <div class="form-field">
                        <label>Birthday</label>
                        <span class="select-container"><select name="day"><option>DD</option><option>01</option></select></span>
                        <span class="select-container"><select name="month"><option>MM</option><option>01</option></select></span>
                        <span class="select-container"><select name="year"><option>YYYY</option><option>2014</option></select></span>
                    </div>
                    <div class="form-field">
                        <label>Account</label>
                        <span class="select-container">
                            <select name="account">
                                <option>ACT</option>
                                <option>FAN</option>
                                <option>PUBLIC</option>
                            </select>
                        </span><span class="what-is"><a href="#">What's this?</a></span>
                    </div>
                    <div class="form-field">
                        <label>&nbsp;</label>
                        <input type="checkbox" name="agree" value="1" /><span>I agree with ariya’s Terms and Conditions
                    </div>
                    <div class="form-field"><label>&nbsp;</label> <input type="submit" value="Sign Up" name="submit" /></div>

                    <div class="form-field">
                        <label>&nbsp;</label>
                        <span>Already have an account? <a href="login.html">Log In</a>
                    </div>
                    <div class="clr"></div>
            </section>
            <!--rightsidebarEND-->
        </div>
        <!--content-innerEND-->
        <div class="clr"></div>
    </section>
    <!--contentEND-->
    <div class="clr"></div>
   
