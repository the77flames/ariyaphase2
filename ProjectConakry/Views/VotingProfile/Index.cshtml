@model ProjectConakry.DomainObjects.WantedUser
@{
    ViewBag.Title = "Vote";
    Layout = "~/Views/Shared/_LayoutNoJs.cshtml";
}

<section class="container section clear">
    <form class="subscribe-form" id="" action="/VotingProfile/Vote" method="POST">
        <input type="hidden" id="customerId" name="customerId" value="@Model.CustomerId" />
        <div class="author">
            @*<h1 class="light-gold-color">Author :@Model.FirstName</h1>*@
        </div>
        <div class="authorVideo">
            <video width="320" height="240" controls autoplay="autoplay">
                <source src="@Url.Action("Index","Video", new { customerId = Model.CustomerId})" type="video/ogg">
            </video>
            @*<div>
                <!-- http://localhost:54941/Home/Media/3  -->
                <embed width="100%" height="500" name="plugin" src="@Url.Action("Index","Video", new { customerId = Model.CustomerId})" type="@Model.EntryVideoContentType">
            </div>*@
        </div>
        <div class="authorVote">
            @if (!((bool)ViewBag.ShowVoteButton))
            {
                 <input type="submit" id="vote" class="large-button light-gold-bg caps" value="Vote">
            }
        </div>
        </form>
</section>